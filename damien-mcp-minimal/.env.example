# ========================================
# Damien MCP Minimal Server - Environment Configuration
# ========================================
# Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control

# ========================================
# DAMIEN MCP SERVER CONFIGURATION
# ========================================
# Backend server URL (original FastAPI server)
DAMIEN_MCP_SERVER_URL=http://localhost:8892

# API key for authenticating with the backend server
# Generate a secure key with: openssl rand -hex 32
DAMIEN_MCP_SERVER_API_KEY=7e508adf3ccf8b9376c312df8cebd488f3988f310afbdf5077d5d3ce63ed7c8f

# Port for the Minimal MCP Server (default: 8893)
# Note: Use a different port than the original MCP server (8892)
DAMIEN_MCP_MINIMAL_PORT=8893

# ========================================
# PHASE MANAGEMENT CONFIGURATION
# ========================================
# Initial phase to start with (default: 1)
DAMIEN_INITIAL_PHASE=1

# Enable automatic phase progression based on performance metrics
# DAMIEN_PHASE_AUTO_PROGRESS=false

# ========================================
# REQUEST CONFIGURATION
# ========================================
# Default timeout for requests in milliseconds (default: 30000)
DAMIEN_DEFAULT_TIMEOUT=30000

# Health check timeout in milliseconds (default: 5000)
DAMIEN_HEALTH_CHECK_TIMEOUT=5000

# Maximum number of retries for failed requests (default: 3)
DAMIEN_MAX_RETRIES=3

# Delay between retries in milliseconds (default: 1000)
DAMIEN_RETRY_DELAY=1000

# Tool cache duration in milliseconds (default: 3600000 - 1 hour)
DAMIEN_TOOL_CACHE_DURATION=3600000

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Enable verbose logging for troubleshooting (default: false)
# VERBOSE_LOGGING=false

# Enable logging to file (default: false)
# DAMIEN_LOG_TO_FILE=false

# Path to log file (default: ./logs/mcp-minimal.log)
# DAMIEN_LOG_FILE_PATH=./logs/mcp-minimal.log

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Set to 'development' to enable additional debugging features
NODE_ENV=production

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
# Path to Claude Desktop config.json
# This will be automatically detected based on OS
# CLAUDE_DESKTOP_CONFIG_PATH=~/Library/Application Support/Claude Desktop/config.json

# Directory for backups during deployment/rollback
# DAMIEN_BACKUP_DIR=./backups