# .env.example for damien_smithery_adapter
# Copy this file to .env and update with your values

# Damien MCP Server configuration
# This must match your running Damien MCP Server instance
DAMIEN_MCP_SERVER_URL=http://localhost:8892
DAMIEN_MCP_SERVER_API_KEY=your_damien_mcp_server_api_key

# Smithery adapter configuration
SERVER_PORT=8081
SERVER_NAME="Damien Email Manager (Smithery Adapter)"
SERVER_VERSION="1.0.0"

# Get this from your Smithery account if you intend to register
# Note: For version 0.3.7 of the Smithery SDK, manual registration is required
SMITHERY_BEARER_AUTH=your_smithery_registry_token_here

# Optional: set LOG_LEVEL to DEBUG for more verbose logging
# LOG_LEVEL=DEBUG